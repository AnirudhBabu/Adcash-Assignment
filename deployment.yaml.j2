apiVersion: apps/v1
kind: Deployment
metadata:
  name: gandalf-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: gandalf
  template:
    metadata:
      labels:
        app: gandalf
    spec:
      imagePullSecrets:
        - name: ghcr-secret
      containers:
        - name: gandalf
          image: ghcr.io/anirudhbabu/adcash-assignment/gandalf-app:{{ image_tag }}
          ports:
            - containerPort: 80
